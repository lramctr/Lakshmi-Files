@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="National park Service (NPS) Enterprise GIS Application">
    <meta name="author" content="EFLHD, NPS, VOLPE">
    <link rel="icon" href="../favicon.ico">

    <title>NPS GIS</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">*@
    @Styles.Render("~/Styles/site")
    @Styles.Render("~/Styles/pivot")
    <link rel="stylesheet" href="https://js.arcgis.com/3.15/esri/css/esri.css">

    @Scripts.Render("~/Scripts/modernizr")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="logo navbar-brand" href="#"></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a id="toggleLegend" href=""><span class="glyphicon glyphicon glyphicon-align-justify" aria-hidden="true"></span> Legend</a></li>
                    <li><a id="toggleBasemaps" href=""><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Basemap Gallery</a></li>
                    <li><a id="toggleNav" href=""><span class="glyphicon glyphicon-road" aria-hidden="true"></span> Navigator</a></li>
                    <li><a id="togglePivot" href=""><span class="glyphicon glyphicon-equalizer" aria-hidden="true"></span> CDS (Pivot)</a></li>
                    <li><a href="" data-toggle="modal" data-target="#aboutModal"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> About</a></li>
                    <li><a href="" data-toggle="modal" data-target="#contactModal"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Contact</a></li>
                    <li class="navbar-form"><input id="searchPark" type="text" class="form-control" placeholder="Search Park..."></li>

                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Tool 1</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="#">Tool 2</a></li>
                        </ul>
                    </li>*@
                </ul>
                
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="row" id="mainContainer">
        <!-- Legend -->
        <div id="legendPanel" class="panel panel-default col-md-2 hidden">
            <div class="panel-heading">
                <h3 class="panel-title">Legend</h3>
            </div>
            <div class="panel-body">
                <div id="legend"></div>
            </div>
        </div>
        <!-- Basemap Gallery -->
        <div id="basemapsPanel" class="panel panel-default col-md-2 hidden">
            <div class="panel-heading">
                <h3 class="panel-title">Basemap Gallery</h3>
            </div>
            <div id="basemapsPanelBody" class="panel-body">
                <div id="basemapGallery"></div>
            </div>
        </div>
        <!-- Pivot Viewer Panel -->
        <div class="col-md-6 hidden" id="pivotPanel"></div>
        <!-- Navigator Panel -->
        <div class="col-md-6 text-center hidden" id="navPanel">
            <img alt="Navigator" src="https://fhfl15vmgisweb.flhd.fhwa.dot.gov/Nps/Navigator/Cycle5/ABLI/Thumbnails/ABLI_0400/5P_ABLI_0400_0_020_F.jpg" />
            <img alt="Navigator" src="https://fhfl15vmgisweb.flhd.fhwa.dot.gov/Nps/Navigator/Cycle5/ABLI/Thumbnails/ABLI_0400/5P_ABLI_0400_0_020_R.jpg" />
        </div>
        <!-- Map panel -->
        <div id="mapPanel"></div>
    </div>

    <!-- Modal - About Us-->
    <div class="modal fade" id="aboutModal" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalLblAbout">About Us</h4>
                </div>
                <div class="modal-body">
                    About us.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal - Contact Us -->
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalLblContact">Contact Us</h4>
                </div>
                <div class="modal-body">
                    Contact us.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://js.arcgis.com/3.15/"></script>
    @Scripts.Render("~/Scripts/app")
    @Scripts.Render("~/Scripts/pivot")

